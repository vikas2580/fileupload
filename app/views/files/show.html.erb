<div class="float-right">
  <p><%= link_to "Home", root_path%></p>
  <p class="ml-2"><%= link_to "Orders", couriers_path %></p>
</div>
<div class= "d-flex justify-content-center"><h3> Welcome to Order Page</h3></div>

<div class="mt-5 mb-5">
  <div class="row">
    <div class="col-6">
      Order Number
    </div>
    <div class="col-6">
      <%= @courier.order_number%>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Weight
    </div>
    <div class="col-6">
      <%= @courier.weight%> Gram
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Status
    </div>
    <div class="col-6">
      <%= @courier.status%>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Service Type
    </div>
    <div class="col-6">
      <%= @courier.service_type%>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Payment Mode
    </div>
    <div class="col-6">
      <%= @courier.payment_mode%>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Cost
    </div>
    <div class="col-6">
      <%= @courier.cost%> Rs.
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Sender
    </div>
    <div class="col-6">
      <%= @courier.user.full_name%>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Address
    </div>
    <div class="col-6">
      <%= @courier.address.full_address%>
    </div>
  </div>
</div>