
<div class= "d-flex justify-content-center"><h3> Welcome to File Show</h3></div>

<div class="mt-5 mb-5">
  <div class="row">
    <div class="col-6">
      Title
    </div>
    <div class="col-6">
      <%= @file.title %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      Description
    </div>
    <div class="col-6">
      <%= @file.description%>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      File
    </div>
    <div class="col-6">
      <%= link_to File.basename(@file.document.path), file_download_file_path(@file)%>
    </div>
  </div>
</div>

<h2>Add Tags</h2>
<%= form_tag file_add_tags_path(@file), method: :post do %>
  <div class="form-group">

    <%= select_tag "tags[]", options_for_select(@tags.pluck(:name, :id)), { :multiple => true, class: 'form-control' } %>
  </div>

  <div class="mt-3">
    <%= submit_tag "Add", class: "btn btn-primary" %>
  </div>
<% end %>