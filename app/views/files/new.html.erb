<h2>Create New File</h2>
<%= form_for @file, url: files_path, method: :post do |f| %>
  <% if @file.errors.full_messages.any? %>
    <% @file.errors.full_messages.each do |error_message| %>
      <%= error_message if @file.errors.full_messages.first == error_message %> <br />
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :attachment %><br />
    <%= f.file_field :document, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= f.submit "Create File", class: "btn btn-primary" %>
  </div>
<% end %>
